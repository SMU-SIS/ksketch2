<s:Button xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" initialize="initSkin()"
		 skinClass="sg.edu.smu.ksketch2.canvas.components.buttons.KSketch_Canvas_Button_Skin">
	<fx:Script>
		<![CDATA[
			import mx.events.StateChangeEvent;
			
			import spark.components.Image;
			
			import sg.edu.smu.ksketch2.KSketchAssets;
			import sg.edu.smu.ksketch2.KSketch_Config;
			
			protected var _up:Class;
			protected var _down:Class;
			protected var _fullScale:Boolean;
			private var _buttonSound:Sound;
			private var _completeSetup:Boolean = false;
			
			public function init(textureClassUp:Class, textureClassDown:Class, fullScale:Boolean):void
			{
				_up = textureClassUp;
				_down = textureClassDown;
				_fullScale = fullScale;
			}
			
			public function initSkin():void
			{
				if(!skin)
					return;

				var textureControl:Image = (skin as Object).texture;
				
				textureControl.source = _up;	
				skin.addEventListener(StateChangeEvent.CURRENT_STATE_CHANGE, _onStateChange);
				
				
				if(KSketch_Config.enableSynphne)
				{
					_buttonSound = new KSketchAssets.therapy_sound_button_main();
					this.addEventListener(MouseEvent.MOUSE_DOWN, _playSound);
				}
			}
			
			private function _onStateChange(event:StateChangeEvent):void
			{
				var textureControl:Image = (skin as Object).texture;
				
				if(event.newState == "up")
					textureControl.source = _up;
				else
					textureControl.source = _down;
			}
			
			private function _playSound(event:MouseEvent):void
			{
				_buttonSound.play();
			}
			
		]]>
	</fx:Script>	
</s:Button>
