<!--- The default skin class for the Spark Button component.  

       @see spark.components.Button
        
      @langversion 3.0
      @playerversion Flash 10
      @playerversion AIR 1.5
      @productversion Flex 4
-->
<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
             xmlns:s="library://ns.adobe.com/flex/spark" 
             xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
             minWidth="21" minHeight="21" xmlns:ksketch2="sg.edu.smu.ksketch2.*">
     
    <fx:Metadata>
        <![CDATA[ 
        /** 
         * @copy spark.skins.spark.ApplicationSkin#hostComponent
         */
        [HostComponent("spark.components.Button")]
		 ]]>
    </fx:Metadata>
	<fx:Script>
		<![CDATA[
			import sg.edu.smu.ksketch2.KSketchStyles;
			
			[Bindable]
			public var upColor:uint = KSketchStyles.COLOR_GREY_LIGHT;
		]]>
	</fx:Script>
    
    <!-- states -->
    <s:states>
        <s:State name="up" />
        <s:State name="over" />
        <s:State name="down" />
        <s:State name="disabled" />
    </s:states>
	
	<s:filters>
		<s:DropShadowFilter
			alpha="{KSketchStyles.ALPHA_06}"
			alpha.disabled="0"
			angle="{KSketchStyles.ANGLE_50}"
			color="{KSketchStyles.COLOR_BLACK}"
			distance="{KSketchStyles.SHADOW_DIST_03}"
			strength="{KSketchStyles.COLOR_RED_LIGHT}"
		/>
	</s:filters>
	
    <!--- @private -->
    <s:Rect left="{KSketchStyles.NUMBER_01}" right="{KSketchStyles.NUMBER_01}" top="{KSketchStyles.NUMBER_01}" bottom="{KSketchStyles.NUMBER_01}"
			radiusX="{KSketchStyles.NUMBER_05}"
			radiusY="{KSketchStyles.NUMBER_05}">
        <s:fill>
			<s:SolidColor id="backgroundFill"
				color.up="{upColor}"
				color.over="{KSketchStyles.COLOR_GREY_DARK}"
				color.down="{KSketchStyles.COLOR_GREY_DARK}"
				color.disabled="{KSketchStyles.COLOR_GREY_LIGHT}"/>
        </s:fill>
    </s:Rect>

    <!-- layer 7: border - put on top of the fill so it doesn't disappear when scale is less than 1 -->
    <!--- @private -->
    <s:Rect id="border" left="0" right="0" top="0" bottom="0" width="69" height="20" radiusX="2" alpha="0">
        <s:stroke>
			<s:SolidColorStroke color="{KSketchStyles.COLOR_WHITE}"/>
        </s:stroke>
    </s:Rect>
    
	<s:Group width="100%" height="100%" alpha.disabled="0.25">
		<s:layout>
			<s:HorizontalLayout verticalAlign="middle" horizontalAlign="center"/>
		</s:layout>
		<s:Image id="texture" width="70%" height="70%" smooth="true" smoothingQuality="high"/>
	</s:Group>
</s:SparkButtonSkin>
