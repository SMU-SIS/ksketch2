<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" click="_handleTap()">
	<fx:Script>
		<![CDATA[
			import sg.edu.smu.ksketch2.KSketchStyles;
			
			private var _on:Boolean = true;
			
			public function set on(value:Boolean):void
			{
				_on = value;
				
				if(_on)
				{
					onLabel.setStyle("color", 0xFFFFFF);
					onStroke.alpha = 1;
					offLabel.setStyle("color",0x000000);
					offStroke.alpha = 0;
				}
				else
				{
					onLabel.setStyle("color", 0x000000);
					onStroke.alpha = 0;
					offLabel.setStyle("color",0xFFFFFF);
					offStroke.alpha = 1;
				}
				
				dispatchEvent(new Event(Event.CHANGE));
			}
			
			public function get on():Boolean
			{
				return _on;
			}
			
			private function _handleTap():void
			{
				on = !on	
			}
		]]>
	</fx:Script>
	<s:Group>
		<s:layout>
			<s:HorizontalLayout gap="0" verticalAlign="top"/>
		</s:layout>
		<s:Group>
			<s:Rect width="100%" height="100%" radiusX="2" radiusY="2">
				<s:stroke>
					<s:SolidColorStroke color="0xFFFFFF" id="onStroke" alpha="1"/>
				</s:stroke>
			</s:Rect>
			<s:Label text="on" fontFamily="{KSketchStyles.APP_FONT_FAMILY}" fontSize="9" id="onLabel"
					 top="2" bottom="2" left="2" right="2"
					 color="0xFFFFFF"
					 />
		</s:Group>
		<s:Group>
			<s:Rect width="100%" height="100%" radiusX="2" radiusY="2">
				<s:stroke>
					<s:SolidColorStroke color="0xFFFFFF" id="offStroke" alpha="0"/>
				</s:stroke>
			</s:Rect>
			<s:Label text="off" fontFamily="{KSketchStyles.APP_FONT_FAMILY}" fontSize="9" id="offLabel"
					 top="2" bottom="2" left="2" right="2" color="0x000000"
					 />
		</s:Group>
	</s:Group>
</s:Group>
