<s:SkinnablePopUpContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
						   xmlns:s="library://ns.adobe.com/flex/spark" backgroundAlpha="0" initialize="initStyle()">
	<fx:Script>
		<![CDATA[
			import mx.core.FlexGlobals;
			import mx.events.FlexEvent;
			
			import spark.components.Application;
			
			import sg.edu.smu.ksketch2.KSketchAssets;
			import sg.edu.smu.ksketch2.KSketchStyleSheet;
			import sg.edu.smu.ksketch2.canvas.components.view.KSketch_CanvasView;
			
			private var _canvasView:KSketch_CanvasView;
			private var _menu:KSketch_PopUp_Menu;
			public var studyMode:int;
			
			private function initStyle():void
			{
				this.removeEventListener(FlexEvent.INITIALIZE, initStyle);
				header.setStyle("fontSize", KSketchStyleSheet.FONT_LARGE);
				moreButton.setStyle("fontSize", KSketchStyleSheet.FONT_SMALL);
				closeButton.setStyle("fontSize", KSketchStyleSheet.FONT_SMALL);
			}
			
			public function init(canvasView:KSketch_CanvasView, menu:KSketch_PopUp_Menu):void
			{
				_canvasView = canvasView;
				_menu = menu;
				
				_menu.open(_canvasView);
			}
			
			override public function open(owner:DisplayObjectContainer, modal:Boolean=false):void
			{
				super.open(owner, modal);
			}
			
			private function more():void
			{
				navigateToURL(new URLRequest("http://ksketch.smu.edu.sg/app/help.html"),"_blank");
			}
			
			override public function close(commit:Boolean=false, data:*=null):void
			{
				super.close(commit, data);
				(FlexGlobals.topLevelApplication as Application).setFocus();
			}
		]]>
	</fx:Script>
	<s:filters>
		<s:DropShadowFilter 
			color="{KSketchStyleSheet.CANVAS_SHADOW_COLOR}" angle="{KSketchStyleSheet.CANVAS_SHADOW_ANGLE}"
			alpha="{KSketchStyleSheet.CANVAS_SHADOW_ALPHA * 0.5}"
			strength="{KSketchStyleSheet.CANVAS_SHADOW_STRENGTH}"
			blurX="{KSketchStyleSheet.CANVAS_SHADOW_X_DISTANCE * 0.75}"
			blurY="{KSketchStyleSheet.CANVAS_SHADOW_Y_DISTANCE * 0.75}"/>
	</s:filters>
	<s:Rect width="100%" height="100%" radiusX="{KSketchStyleSheet.MENU_CORNER_RADIUS}" radiusY="{KSketchStyleSheet.MENU_CORNER_RADIUS}">
		<s:fill>
			<s:SolidColor color="{KSketchStyleSheet.MENU_BACKGROUND_COLOR}"/>
		</s:fill>
	</s:Rect>
	<s:Group>
		<s:layout>
			<s:VerticalLayout gap="{KSketchStyleSheet.DIALOG_PADDING_20}" paddingLeft="{KSketchStyleSheet.DIALOG_PADDING_15}" paddingRight="{KSketchStyleSheet.DIALOG_PADDING_15}" paddingTop="{KSketchStyleSheet.DIALOG_PADDING_20}" paddingBottom="{KSketchStyleSheet.DIALOG_PADDING_10}"/>
		</s:layout>
		<s:Label id="header" text="Help"/>
		
		<s:Group>
			<s:Image id="help_image" source="{KSketchAssets.image_help}" width="{KSketchStyleSheet.IMAGE_HELP_WIDTH}" height="{KSketchStyleSheet.IMAGE_HELP_HEIGHT}"/>
			
			<s:Group width="100%" x="{KSketchStyleSheet.X_POS_BUTTON}" y="{KSketchStyleSheet.Y_POS_BUTTON}">
				<s:layout>
					<s:HorizontalLayout gap="{KSketchStyleSheet.MENU_BUTTON_GAP}" paddingLeft="{KSketchStyleSheet.DIALOG_PADDING_10}"/>
				</s:layout>
				<s:Button id="moreButton" label="More" click="more()" height="{KSketchStyleSheet.DIALOG_MEASUREMENT_25}"/>
				<s:Button id="closeButton" label="Close" click="close()" height="{KSketchStyleSheet.DIALOG_MEASUREMENT_25}"/>
			</s:Group>
		</s:Group>
		
		
	</s:Group>
</s:SkinnablePopUpContainer>
