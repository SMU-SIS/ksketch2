<s:SkinnablePopUpContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
						   xmlns:s="library://ns.adobe.com/flex/spark" backgroundAlpha="0" initialize="initStyle()" >
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
		<s:HTTPService id="httpService"
					   useProxy="false"  
					   method="POST"
					   resultFormat="text" 
					   >
		</s:HTTPService>
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			import sg.edu.smu.ksketch2.KSketchAssets;
			import sg.edu.smu.ksketch2.KSketchStyles;
			import sg.edu.smu.ksketch2.canvas.components.view.KSketch_CanvasView;
			import sg.edu.smu.ksketch2.canvas.controls.KActivityControl;
			import sg.edu.smu.ksketch2.canvas.controls.KActivityResultControl;
			
			private var _canvasView:KSketch_CanvasView;
			private var _resultControl:KActivityResultControl;
			private var _activityControl:KActivityControl;
			
			public function init(canvasView:KSketch_CanvasView, resultControl:KActivityResultControl, activityControl:KActivityControl):void
			{
				_canvasView = canvasView;
				_resultControl = resultControl;
				_activityControl = activityControl;
			}
			
			private function initStyle():void
			{
				this.removeEventListener(FlexEvent.INITIALIZE, initStyle);
				scoreHeader.setStyle("fontSize", KSketchStyles.DIALOG_BUTTON_HEADER);
				scoreLabel.setStyle("fontSize", KSketchStyles.DIALOG_BUTTON_HEADER);
				continueButton.setStyle("fontSize", KSketchStyles.DIALOG_BUTTON_SIZE);
				retryButton.setStyle("fontSize", KSketchStyles.DIALOG_BUTTON_SIZE);
			}
			
			public function initStars(stars:int):void
			{
				if(stars == 1)
				{
					star1.source = KSketchAssets.star_fill;
				}
				else if(stars == 2)
				{
					star1.source = KSketchAssets.star_fill;
					star2.source = KSketchAssets.star_fill;
				}
				else if(stars == 3)
				{
					star1.source = KSketchAssets.star_fill;
					star2.source = KSketchAssets.star_fill;
					star3.source = KSketchAssets.star_fill;
				}
			}
			
			private function _resetStars():void
			{
				star1.source = KSketchAssets.star_empty;
				star2.source = KSketchAssets.star_empty;
				star3.source = KSketchAssets.star_empty;
			}
			
			override public function open(owner:DisplayObjectContainer, modal:Boolean=false):void
			{
				super.open(owner, modal);
			}
			
			override public function close(commit:Boolean=false, data:*=null):void
			{
				super.close(commit,data);
				_resetStars();
			}
			
			private function _continueActivity():void
			{
				_activityControl.continueActivity();
				close();
			}
			
			private function _retryActivity():void
			{
				_activityControl.retryActivity();
				close();
			}
		]]>
	</fx:Script>
	<s:filters>
		<s:DropShadowFilter 
			color="{KSketchStyles.CANVAS_SHADOW_COLOR}" angle="{KSketchStyles.CANVAS_SHADOW_ANGLE}"
			alpha="{KSketchStyles.CANVAS_SHADOW_ALPHA * 0.5}"
			strength="{KSketchStyles.CANVAS_SHADOW_STRENGTH}"
			blurX="{KSketchStyles.CANVAS_SHADOW_X_DISTANCE * 0.75}"
			blurY="{KSketchStyles.CANVAS_SHADOW_Y_DISTANCE * 0.75}"/>
	</s:filters>
	<s:Group id="resultGroup" visible="true">
		<s:Rect id="resultBox" width="100%" height="100%" radiusX="{KSketchStyles.MENU_CORNER_RADIUS}" radiusY="{KSketchStyles.MENU_CORNER_RADIUS}">
			<s:fill>
				<s:SolidColor color="{KSketchStyles.MENU_BACKGROUND_COLOR}"/>
			</s:fill>
		</s:Rect>
		<s:Group>
			<s:layout>
				<s:VerticalLayout gap="{KSketchStyles.DIALOG_PADDING_10}" paddingLeft="{KSketchStyles.DIALOG_PADDING_5}" paddingRight="{KSketchStyles.DIALOG_PADDING_5}" paddingTop="{KSketchStyles.DIALOG_PADDING_5}" paddingBottom="{KSketchStyles.DIALOG_PADDING_5}"/>
			</s:layout>
			<s:Group width="100%">
				<s:layout>
					<s:HorizontalLayout paddingLeft="{KSketchStyles.DIALOG_PADDING_10}"/>
				</s:layout>
				<s:Image id="star1" source="{KSketchAssets.star_empty}"/>
				<s:Image id="star2" source="{KSketchAssets.star_empty}"/>
				<s:Image id="star3" source="{KSketchAssets.star_empty}"/>
			</s:Group>
			<s:Group width="100%">
				<s:layout>
					<s:HorizontalLayout horizontalAlign="center" paddingLeft="{KSketchStyles.DIALOG_PADDING_20}"/>
				</s:layout>
				<s:Label id="scoreHeader" text="Score:"/>
				<s:Label id="scoreLabel" text="100000"/>
			</s:Group>
			<s:Group width="100%">
				<s:layout>
					<s:HorizontalLayout paddingLeft="{KSketchStyles.DIALOG_PADDING_20}" paddingRight="{KSketchStyles.DIALOG_PADDING_20}"/>
				</s:layout>
				<s:Button id="retryButton" label="Retry" click="_retryActivity()" width="50%"/>
				<s:Button id="continueButton" label="Continue" click="_continueActivity()" width="50%"/>
			</s:Group>
		</s:Group>
	</s:Group>
</s:SkinnablePopUpContainer>