<s:SkinnablePopUpContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
						   xmlns:s="library://ns.adobe.com/flex/spark"
						   xmlns:buttons="sg.edu.smu.ksketch2.canvas.components.buttons.*"
						   backgroundAlpha="0" initialize="initStyle()" creationComplete="_initButtons()">
	<fx:Script>
		<![CDATA[
			import mx.core.FlexGlobals;
			import mx.events.FlexEvent;
			
			import spark.components.Application;
			
			import sg.edu.smu.ksketch2.KSketchAssets;
			import sg.edu.smu.ksketch2.KSketchStyleSheet;
			import sg.edu.smu.ksketch2.canvas.components.view.KSketch_CanvasView;
			
			private var _canvasView:KSketch_CanvasView;
			private var _menu:KSketch_PopUp_Menu;
			public var mode:int;
			
			private function initStyle():void
			{
				this.removeEventListener(FlexEvent.INITIALIZE, initStyle);
				header.setStyle("fontSize", KSketchStyleSheet.FONT_LARGE);
				mailLabel.setStyle("fontSize", KSketchStyleSheet.FONT_SMALL);
				facebookLabel.setStyle("fontSize", KSketchStyleSheet.FONT_SMALL);
				twitterLabel.setStyle("fontSize", KSketchStyleSheet.FONT_SMALL);
				closeButton.setStyle("fontSize", KSketchStyleSheet.FONT_SMALL);
			}
			
			private function _initButtons():void
			{
				this.removeEventListener(FlexEvent.CREATION_COMPLETE, _initButtons);
				mailButton.init(KSketchAssets.texture_share_mail, KSketchAssets.texture_share_mail_down, true);
				mailButton.initSkin();
				facebookButton.init(KSketchAssets.texture_share_facebook, KSketchAssets.texture_share_facebook_down, true);
				facebookButton.initSkin();
				twitterButton.init(KSketchAssets.texture_share_twitter, KSketchAssets.texture_share_twitter_down, true);
				twitterButton.initSkin();
			}
			
			public function init(canvasView:KSketch_CanvasView, menu:KSketch_PopUp_Menu):void
			{
				_canvasView = canvasView;
				_menu = menu;
				_menu.open(_canvasView);
			}
			
			override public function open(owner:DisplayObjectContainer, modal:Boolean=false):void
			{
				super.open(owner, modal);
				
			}
			
			override public function close(commit:Boolean=false, data:*=null):void
			{
				super.close(commit, data);
				(FlexGlobals.topLevelApplication as Application).setFocus();
			}
			
			private function shareToMail():void
			{
				//Share - Insert code here
			}
			
			private function shareToFacebook():void
			{
				//Share - Insert code here
			}
			
			private function shareToTwitter():void
			{
				//Share - Insert code here
			}
		]]>
	</fx:Script>
	<s:filters>
		<s:DropShadowFilter 
			color="{KSketchStyleSheet.CANVAS_SHADOW_COLOR}" angle="{KSketchStyleSheet.CANVAS_SHADOW_ANGLE}"
			alpha="{KSketchStyleSheet.CANVAS_SHADOW_ALPHA * 0.5}"
			strength="{KSketchStyleSheet.CANVAS_SHADOW_STRENGTH}"
			blurX="{KSketchStyleSheet.CANVAS_SHADOW_X_DISTANCE * 0.75}"
			blurY="{KSketchStyleSheet.CANVAS_SHADOW_Y_DISTANCE * 0.75}"/>
	</s:filters>
	<s:Rect width="100%" height="100%" radiusX="{KSketchStyleSheet.MENU_CORNER_RADIUS}" radiusY="{KSketchStyleSheet.MENU_CORNER_RADIUS}">
		<s:fill>
			<s:SolidColor color="{KSketchStyleSheet.MENU_BACKGROUND_COLOR}"/>
		</s:fill>
	</s:Rect>
	<s:Group>
		<s:layout>
			<s:VerticalLayout gap="{KSketchStyleSheet.DIALOG_PADDING_20}" paddingLeft="{KSketchStyleSheet.DIALOG_PADDING_15}" paddingRight="{KSketchStyleSheet.DIALOG_PADDING_10}" paddingTop="{KSketchStyleSheet.DIALOG_PADDING_20}" paddingBottom="{KSketchStyleSheet.DIALOG_PADDING_10}"/>
		</s:layout>
		<s:Label id="header" text="Sharing Options"/>
		
		<s:Group>
			<s:layout>
				<s:HorizontalLayout paddingLeft="{KSketchStyleSheet.DIALOG_PADDING_10}" paddingRight="{KSketchStyleSheet.DIALOG_PADDING_15}" verticalAlign="middle"/>
			</s:layout>
			
			<s:Group>
				<s:layout>
					<s:VerticalLayout paddingLeft="{KSketchStyleSheet.DIALOG_PADDING_10}" paddingRight="{KSketchStyleSheet.DIALOG_PADDING_15}" verticalAlign="middle" horizontalAlign="center"/>
				</s:layout>
				
				<buttons:KSketch_Button
					id="mailButton"
					width="{KSketchStyleSheet.TIMEBAR_BUTTON_WIDTH}"
					height="{KSketchStyleSheet.TIMEBAR_BUTTON_HEIGHT}"
					/>
				<s:Label id="mailLabel" text="Mail"/>
			</s:Group>
			
			<s:Group>
				<s:layout>
					<s:VerticalLayout paddingLeft="{KSketchStyleSheet.DIALOG_PADDING_10}" paddingRight="{KSketchStyleSheet.DIALOG_PADDING_15}" verticalAlign="middle" horizontalAlign="center"/>
				</s:layout>
				
				<buttons:KSketch_Button
					id="facebookButton"
					width="{KSketchStyleSheet.TIMEBAR_BUTTON_WIDTH}"
					height="{KSketchStyleSheet.TIMEBAR_BUTTON_HEIGHT}"
					/>
				<s:Label id="facebookLabel" text="Facebook"/>
			</s:Group>
			
			<s:Group>
				<s:layout>
					<s:VerticalLayout paddingLeft="{KSketchStyleSheet.DIALOG_PADDING_10}" paddingRight="{KSketchStyleSheet.DIALOG_PADDING_15}" verticalAlign="middle" horizontalAlign="center"/>
				</s:layout>
				
				<buttons:KSketch_Button
					id="twitterButton"
					width="{KSketchStyleSheet.TIMEBAR_BUTTON_WIDTH}"
					height="{KSketchStyleSheet.TIMEBAR_BUTTON_HEIGHT}"
					/>
				<s:Label id="twitterLabel" text="Twitter"/>
			</s:Group>
		</s:Group>
		
		
		<s:Group width="100%">
			<s:layout>
				<s:VerticalLayout paddingLeft="{KSketchStyleSheet.DIALOG_PADDING_10}" horizontalAlign="right"/>
			</s:layout>
			<s:Button id="closeButton" label="Close" click="close()" height="{KSketchStyleSheet.DIALOG_MEASUREMENT_25}"/>
		</s:Group>
	</s:Group>
</s:SkinnablePopUpContainer>
