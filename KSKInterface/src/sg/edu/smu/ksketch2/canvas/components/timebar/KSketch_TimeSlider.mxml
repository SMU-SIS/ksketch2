<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:ksketch2="sg.edu.smu.ksketch2.*"
		 width="100%" height="100%">
	<fx:Script>
		<![CDATA[
			import sg.edu.smu.ksketch2.KSketchStyles;
		]]>
	</fx:Script>
	<s:layout>
		<s:VerticalLayout verticalAlign="middle" horizontalAlign="center"/>
	</s:layout>
	<s:Group width="100%" height="100%"/>
	<s:Group width="100%" height="{KSketchStyles.TIME_CONTROL_HEIGHT}" id="contentGroup" mouseChildren="false">
		<s:Rect width="100%" height="100%" id="backgroundFill">
			<s:fill>
				<s:SolidColor color="{KSketchStyles.TIME_CONTROL_BACKGROUND_COLOR}"/>
			</s:fill>
		</s:Rect>
		<s:Group width="100%" height="100%">
			<s:layout>
				<s:VerticalLayout verticalAlign="middle" horizontalAlign="center"/>
			</s:layout>
			<s:Group width="100%" height="70%" id="timeControlContents">
				<s:Group id="unselectedTickMarkDisplay"  height="100%" alpha="{KSketchStyles.TIME_TICK_UNSELECTED_ALPHA}">
					<s:mask>
						<s:Group width="{timeControlContents.width}" height="{timeControlContents.height}">
							<s:Rect width="101%" height="100%" alpha="0.5">
								<s:fill>
									<s:SolidColor color="0xFF0000"/>
								</s:fill>
							</s:Rect>
						</s:Group>
					</s:mask>
				</s:Group>
				<s:Group id="activityDisplay"  height="100%">
					<s:mask>
						<s:Group width="{timeControlContents.width}" height="{timeControlContents.height}">
							<s:Rect width="101%" height="100%" alpha="0.5">
								<s:fill>
									<s:SolidColor color="0xFF0000"/>
								</s:fill>
							</s:Rect>
						</s:Group>
					</s:mask>
				</s:Group>
				<s:Group id="selectedTickMarkDisplay"  height="100%" alpha="{KSketchStyles.TIME_TICK_SELECTED_ALPHA}">
					<s:mask>
						<s:Group width="{timeControlContents.width}" height="{timeControlContents.height}">
							<s:Rect width="100%" height="100%" alpha="0.5">
								<s:fill>
									<s:SolidColor color="0xFF0000"/>
								</s:fill>
							</s:Rect>
						</s:Group>
					</s:mask>
				</s:Group>
			</s:Group>
		</s:Group>
		<s:Group id="timeDisplay" cacheAsBitmap="true"/>
	</s:Group>
	<s:Group width="100%" id="timeLabel">
		<s:layout>
			<s:HorizontalLayout/>
		</s:layout>
		<s:Label text="0"
				 fontSize="{KSketchStyles.TIME_LABEL_FONT_SIZE}"
				 color="{KSketchStyles.TIME_LABEL_FONT_COLOR}"
				 fontFamily="{KSketchStyles.APP_FONT_FAMILY}"/>
		<s:Group width="100%" height="100%"/>
		<s:Label text="0"
				 fontSize="{KSketchStyles.TIME_LABEL_FONT_SIZE}"
				 color="{KSketchStyles.TIME_LABEL_FONT_COLOR}"
				 fontFamily="{KSketchStyles.APP_FONT_FAMILY}"/>
		<s:Group width="100%" height="100%"/>
		<s:Label text="0"
				 fontSize="{KSketchStyles.TIME_LABEL_FONT_SIZE}"
				 color="{KSketchStyles.TIME_LABEL_FONT_COLOR}"
				 fontFamily="{KSketchStyles.APP_FONT_FAMILY}"/>
		<s:Group width="100%" height="100%"/>
		<s:Label text="0"
				 fontSize="{KSketchStyles.TIME_LABEL_FONT_SIZE}"
				 color="{KSketchStyles.TIME_LABEL_FONT_COLOR}"
				 fontFamily="{KSketchStyles.APP_FONT_FAMILY}"/>
		<s:Group width="100%" height="100%"/>
		<s:Label text="0"
				 fontSize="{KSketchStyles.TIME_LABEL_FONT_SIZE}"
				 color="{KSketchStyles.TIME_LABEL_FONT_COLOR}"
				 fontFamily="{KSketchStyles.APP_FONT_FAMILY}"/>
		<s:Group width="100%" height="100%"/>
		<s:Label text="0"
				 fontSize="{KSketchStyles.TIME_LABEL_FONT_SIZE}"
				 color="{KSketchStyles.TIME_LABEL_FONT_COLOR}"
				 fontFamily="{KSketchStyles.APP_FONT_FAMILY}"/>
		<s:Group width="100%" height="100%"/>
		<s:Label text="0"
				 fontSize="{KSketchStyles.TIME_LABEL_FONT_SIZE}"
				 color="{KSketchStyles.TIME_LABEL_FONT_COLOR}"
				 fontFamily="{KSketchStyles.APP_FONT_FAMILY}"/>
	</s:Group>
</s:Group>
