<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark" width="100%" height="100%">
	
	<fx:Script>
		<![CDATA[
			import sg.edu.smu.ksketch2.utils.KSwipeEvent;
			
			protected function button_deleteHandler(event:MouseEvent):void
			{
				stage.dispatchEvent(new KSwipeEvent(KSwipeEvent.DELETE_ACTION));
			}
			
			protected function button_logHandler(event:MouseEvent):void
			{
				stage.dispatchEvent(new KSwipeEvent(KSwipeEvent.LOG_ACTION));
			}
		]]>
	</fx:Script>
	<s:HGroup verticalAlign="top" horizontalAlign="right" width="100%" height="100%" gap="-20">
		<s:Button id="logButton" icon="@Embed('assets/Button_ActionList_Log.png')" click="button_logHandler(event)" 
				  skinClass="sg.edu.smu.ksketch2.canvas.components.buttons.KSketch_Transparent_Button_Skin"/>
		<s:Button icon="@Embed('assets/Button_ActionList_Delete.png')" click="button_deleteHandler(event)" 
				  skinClass="sg.edu.smu.ksketch2.canvas.components.buttons.KSketch_Transparent_Button_Skin"/>
		
	</s:HGroup>
</s:Group>
