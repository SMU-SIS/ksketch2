<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:buttons="sg.edu.smu.ksketch2.canvas.components.buttons.*" initialize="initStyle()" 
		 width="100%" height="100%">
	
	<fx:Script>
		<![CDATA[
			import sg.edu.smu.ksketch2.KSketchAssets;
			import sg.edu.smu.ksketch2.KSketchStyles;
			import sg.edu.smu.ksketch2.utils.KSwipeEvent;
			
			private function initStyle():void
			{
				logButton.init(KSketchAssets.actionList_log , KSketchAssets.actionList_log);
				deleteButton.init(KSketchAssets.actionList_delete , KSketchAssets.actionList_delete);
				logButton.initSkin();
				deleteButton.initSkin();
			}
			
			protected function button_deleteHandler(event:MouseEvent):void
			{
				stage.dispatchEvent(new KSwipeEvent(KSwipeEvent.DELETE_ACTION));
			}
			
			protected function button_logHandler(event:MouseEvent):void
			{
				stage.dispatchEvent(new KSwipeEvent(KSwipeEvent.LOG_ACTION));
			}
		]]>
	</fx:Script>
	<s:HGroup verticalAlign="top" horizontalAlign="right" width="100%" height="100%" gap="{KSketchStyles.LIST_SKETCH_GAP}">
		<buttons:KSketch_ListButton id="logButton" width="{KSketchStyles.LIST_SKETCH_WIDTH}" height="{KSketchStyles.LIST_SKETCH_HEIGHT}" click="button_logHandler(event)"/>
		<buttons:KSketch_ListButton id="deleteButton" width="{KSketchStyles.LIST_SKETCH_WIDTH}" height="{KSketchStyles.LIST_SKETCH_HEIGHT}" click="button_deleteHandler(event)"/>
		
	</s:HGroup>
</s:Group>
