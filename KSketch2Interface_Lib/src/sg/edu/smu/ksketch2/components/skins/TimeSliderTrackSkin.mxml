		<s:fill>
			<s:LinearGradient rotation="90" >
				<s:GradientEntry color="0x000000" alpha="0.55" />
				<s:GradientEntry color="0xFFFFFF" alpha="0.55" ratio="0.8" />
			</s:LinearGradient>
		</s:fill>
	</s:Rect>-->
	
	<!-- fill -->
	<s:Rect left="1" right="1" top="4" bottom="4" radiusX="2" radiusY="2">
		<s:fill>
			<s:LinearGradient rotation="270">
				<s:GradientEntry color="0xD8D8D8" ratio="0.9"/>
				<s:GradientEntry color="0x7CA6D1" ratio="0.1"/>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	
	<!-- shadow -->
	<s:Rect left="2" right="2" top="4" height="1">
		<s:fill>
			<s:SolidColor color="0x9E9E9E" />
		</s:fill>
	</s:Rect>
	
	<!-- hit area -->
	<s:Rect left="0" right="0" top="0" bottom="0">
		<s:fill>
			<s:SolidColor alpha="0"/>
		</s:fill>
	</s:Rect>
</s:SparkSkin>