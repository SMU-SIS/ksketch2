<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" title="HomeView" actionBarVisible="false" xmlns:components="views.canvas.components.*" xmlns:buttondrawer="views.canvas.components.buttondrawer.*" xmlns:view="sg.edu.smu.ksketch2.view.*"
	    creationComplete="initCanvas()"
		addedToStage="_initStates()"
		xmlns:transformWidget="views.canvas.components.transformWidget.*"
		xmlns:widgets="sg.edu.smu.ksketch2.controls.widgets.*"
		xmlns:timeBar="views.canvas.components.timeBar.*"
		destructionPolicy="never"
		add="_addObjHandler(event);" 
		>
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			import spark.primitives.BitmapImage;
			
			import sg.edu.smu.ksketch2.KSketch2;
			import sg.edu.smu.ksketch2.controls.inputmethods.IInteractionMethod;
			import sg.edu.smu.ksketch2.controls.interactioncontrol.IInteractionControl;
			
			import views.canvas.interactioncontrol.KMobileInteractionControl;
			import views.canvas.interactors.selection.KSelectionInteractorManager;
			import views.canvas.interactors.transition.KTransitionInteractorManager;
			
			private var _KSketch:KSketch2;
			private var _interactionControl:KMobileInteractionControl;
			
			private var _transitionDelegator:KTransitionInteractorManager;
			private var _selectionDelegator:KSelectionInteractorManager;
			
			private var _newObjType:uint = 0;
			
			public function initCanvas():void
			{
				_KSketch = new KSketch2();
				_interactionControl = new KMobileInteractionControl(_KSketch, timeControl);
				
				_initStates();
			}			
			
			private function _initStates():void
			{
				currentTimeLabel.init(_KSketch, timeControl, KTimeLabel.LABEL_CURRENT_TIME);
				maxTimeLabel.init(_KSketch, timeControl, KTimeLabel.LABEL_MAX_TIME);

				modelDisplay.init(_KSketch);
				timeControl.init(_KSketch);
				
				playButton.init(timeControl);
				_transitionDelegator = new KTransitionInteractorManager(_KSketch, _interactionControl, widget, modelDisplay);
				_selectionDelegator = new KSelectionInteractorManager(_KSketch, _interactionControl, canvas_region, modelDisplay);
				
				_interactionControl.reset();
			}
			
			private function _menuBtnHandler():void
			{
				navigator.addEventListener("addImgToScn", _addImgHandler);
				navigator.pushView(views.canvas.Menu, _interactionControl);
			}
			
			private function _addImgHandler(e:Event):void
			{
				_removeMenuBtnHandler();
				_newObjType = 1;
			}
			
			private function _removeMenuBtnHandler():void
			{
				navigator.removeEventListener("addImgToScn", _addImgHandler);
			}
			
			private function _addObjHandler(e:FlexEvent):void
			{
				if(_newObjType == 1)
				{
					//Add image
					var tempImg:BitmapImage = new BitmapImage();
					
					//tempImg.source = "file:///storage/sdcard0/Download/3d11ae64abb9f58c5e0556c082157e3c.jpeg";
					tempImg.source = navigator.poppedViewReturnedObject.object;
					_KSketch.object_Add_Image(tempImg.bitmapData,0); //<< Should use _KSketch.time
					_newObjType = 0;
				}
			}
		]]>
	</fx:Script>
	<s:layout>
		<s:VerticalLayout gap="0"/>
	</s:layout>
	
	<s:Group width="100%" height="100%">
		<!-- main region for touch interaction that changes the model directly -->
		<s:BorderContainer id="canvas_region" backgroundColor="0XD8D8D8" width="100%" height="100%">
			<s:layout>
				<s:VerticalLayout horizontalAlign="center" verticalAlign="middle"/>
			</s:layout>
			<s:BorderContainer id="drawing_stage" height="95%" width="{drawing_stage.height/9*16}" borderVisible="false">
				<!-- The model display displays the objects in the model -->
				<view:KModelDisplay id="modelDisplay" scaleX="{drawing_stage.width/KSketch2.CANONICAL_WIDTH}"
									scaleY="{drawing_stage.height/KSketch2.CANONICAL_HEIGHT}"/>
				<transformWidget:TouchWidgetTemplate id="widget" visible="false"/>
			</s:BorderContainer>
		</s:BorderContainer>		
	</s:Group>
	
	<s:BorderContainer id="timebar_region" backgroundColor="0xD8D8D8" width="100%" height="60">
		
		<s:Group width="100%" height="100%">
			<s:layout >
				<s:HorizontalLayout gap="0" verticalAlign="middle" paddingLeft="5"/>
			</s:layout>
			<timeBar:Touch_Play_Button id="playButton"/>
			<timeBar:KTimeLabel id="currentTimeLabel"/>
			<s:Group width="100%" height="100%">
				<s:layout>
					<s:VerticalLayout gap="3" verticalAlign="middle" horizontalAlign="center" paddingLeft="5" paddingRight="5"/>
				</s:layout>
				<timeBar:KTouchTimeControl id="timeControl"/>
			</s:Group>
			<timeBar:KTimeLabel id="maxTimeLabel"/>
			<timeBar:Touch_Menu_Button id="menuButton"/>
		</s:Group>
		
		<s:Group width="100%">
			<s:layout>
				<s:HorizontalLayout gap="0"/>
			</s:layout>
			<s:BorderContainer width="50" height="60" backgroundColor="0x000000" backgroundAlpha="0" borderVisible="false" click="playButton.playToggle()"/>
			<s:Group width="100%"/>
			<s:BorderContainer width="50" height="60" backgroundColor="0x000000" backgroundAlpha="0" borderVisible="false" click="_menuBtnHandler()"/>
		</s:Group>
	</s:BorderContainer>
</s:View>