<?xml version="1.0" encoding="utf-8"?>
<s:SkinnablePopUpContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" width="100%" height="100%">
	<fx:Script>
		<![CDATA[
			import mx.core.UIComponent;
			private var timer:Timer;
			private var _parentContainer:UIComponent;
			
			public function init(parentContainer:UIComponent):void
			{
				timer = new Timer(500);
				timer.addEventListener(TimerEvent.TIMER, _closeMessage);
				_parentContainer = parentContainer;
			}
			
			public function showMessage(message:String):void
			{				
				timer.reset();
				timer.start();
				
				open(_parentContainer);
				messageText.text = message;
			}
			
			private function _closeMessage(event:TimerEvent):void
			{
				close();
			}
		]]>
	</fx:Script>
	<s:Group width="100%" height="25%">
		<s:layout>
			<s:VerticalLayout verticalAlign="bottom" horizontalAlign="center"/>
		</s:layout>
		<s:Label id="messageText" text="Feedback Message" fontSize="32" fontFamily="_sans"/>
	</s:Group>
	<s:Group width="100%" height="75%"/>
</s:SkinnablePopUpContainer>
