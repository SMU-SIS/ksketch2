<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("spark.components.Button")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="down" />
		<s:State name="over" />
		<s:State name="up" />
	</s:states>
	
	<s:Rect left="1" right="1" top="1" bottom="1">
		<s:fill>
			<s:SolidColor color="0xFFFFFF"/>
		</s:fill>
		<s:filters>
			<s:GlowFilter color="0x000000" alpha="0.7" inner="true" blurX="16" blurY="16" includeIn="down"/>
		</s:filters>
	</s:Rect>
	<s:Group width="100%" height="100%">
		<s:layout>
			<s:VerticalLayout paddingLeft="5" paddingRight="3" paddingTop="3" verticalAlign="bottom" horizontalAlign="left"/>
		</s:layout>
		<s:Label id="labelDisplay" fontSize="32" textAlign="center" text="+ New Document"/>
	</s:Group>
</s:Skin>
