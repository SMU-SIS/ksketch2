<commands>
  <draw cursorpath="0,100,200 0,100,100 0,75,150 0,125,150" name="stroke1"/>
  <loopselect cursorpath="0,0,0 0,0,500 0,500,500 0,500,0"/>

  <changetime time="1000"/>
  <movecenter cursorpath="1000,100,150 1000,100,200"/>
  <rotate cursorpath="1000,100,100 1000,200,200" transitiontype="INTERPOLATED"/>
  
  <changetime time="2000"/>
  <rotate cursorpath="2000,200,200 2000,100,300" transitiontype="INTERPOLATED"/>
  
  <scale cursorpath="2000,100,300 2000,100,400" transitiontype="INTERPOLATED"/>
  
  <assert-matrix id="before" time="1000" name="stroke1" rotate="90 100 200" scale="1.5 100 200"/>
  <assert-matrix id="before" time="1500" name="stroke1" rotate="135 100 200" scale="1.75 100 200"/>
  <assert-matrix id="before" time="2000" name="stroke1" rotate="180 100 200" scale="2 100 200"/>
  
  <movecenter cursorpath="2000,100,200 2000,100,400"/>
  
  <assert-matrix id="after" time="1000" name="stroke1" rotate="90 100 200" scale="1.5 100 200"/>
  <assert-matrix id="after" time="1500" name="stroke1" rotate="135 100 200" scale="1.75 100 200"/>
  <assert-matrix id="after" time="2000" name="stroke1" rotate="180 100 200" scale="2 100 200"/>
</commands>